<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义圆角button支持的属性 -->
    <declare-styleable name="CornersButton">
        <attr name="bg_color" />
        <attr name="bg_startColor" />
        <attr name="bg_endColor" />
        <attr name="bg_checkedColor" />
        <attr name="bg_checkedStartColor" />
        <attr name="bg_checkedEndColor" />
        <attr name="bg_colorOrientation" />
        <attr name="bg_strokeColor" />
        <attr name="bg_strokeCheckedColor" />
        <attr name="bg_strokeWidth" />
        <attr name="bg_cornerRadius" />
        <attr name="icon_start_color" />
        <attr name="icon_start_size" />
        <attr name="icon_top_color" />
        <attr name="icon_top_size" />
        <attr name="icon_end_color" />
        <attr name="icon_end_size" />
        <attr name="icon_bottom_color" />
        <attr name="icon_bottom_size" />
        <attr name="android:checked" />
    </declare-styleable>

    <!-- 定义圆形button支持的属性 -->
    <declare-styleable name="CircleButton">
        <attr name="bg_color" />
        <attr name="bg_startColor" />
        <attr name="bg_endColor" />
        <attr name="bg_colorOrientation" />
        <attr name="icon_color" />
        <attr name="icon_size" />
        <attr name="android:enabled" />
    </declare-styleable>
</resources>
